/**
 * @file Basic
 * @brief Include file for the Basic module
 *
 * The Basic module implements automatic differentiation for basic (scalar)
 * arithmetic types. No external libraries are required.
 *
 * Do not include headers in the @c src/Basic directory directly.
 * Instead, include this file.
 */

#ifndef AUTODIFF_BASIC
#define AUTODIFF_BASIC

#ifdef AUTODIFF_MODULE
#error "Multiple modules included"
#endif

// module-specific specializations, aliases
#include "src/Basic/module.hpp"

// include operations
#include "src/Basic/ops.hpp"

#endif // AUTODIFF_BASIC
